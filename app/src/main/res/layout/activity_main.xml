<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#2f2948">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board_gradient"
        android:id="@+id/gLayout">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im0"
            android:layout_row="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_column="0"
            android:tag="0"
            android:onClick="placeCounter"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:tag="1"
            android:onClick="placeCounter"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="17dp"
            android:tag="2"
            android:onClick="placeCounter"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="7dp"
            android:tag="3"
            android:onClick="placeCounter"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="27dp"
            android:tag="4"
            android:onClick="placeCounter" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="17dp"
            android:tag="5"
            android:onClick="placeCounter"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im6"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="7dp"
            android:tag="6"
            android:onClick="placeCounter"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/im7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="27dp"
            android:tag="7"
            android:onClick="placeCounter"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="17dp"
            android:tag="8"
            android:onClick="placeCounter"
            android:id="@+id/im8"
            android:clickable="true" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:enabled="false"
        android:id="@+id/bNewGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="newGame"
        android:background="#60ffb3"
        android:textColor="#ff0014"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
        android:textColorHighlight="#feff20" />
</RelativeLayout>
